@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order Checkout</title>
</head>
<body>
    <div>
        <h2>Order Checkout</h2>

        <div>
            <!-- Display selected pizza type and quantity -->
            <p>Pizza Type: @ViewBag.PizzaType</p>
            <p>Quantity: @ViewBag.Quantity</p>
            <!-- Add pricing and other checkout details here -->
        </div>

        <form method="post" action="/Order/Confirmation">
            <!-- Additional checkout form fields go here -->
            <button type="submit">Confirm Order</button>
        </form>
    </div>
</body>
</html>

